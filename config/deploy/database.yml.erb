# database config template

base: &base
  adapter: mysql2
  encoding: utf8
  reconnect: false
  pool: 5
  timeout: 5000
  
development:
  database: fricodb_development
  username: root
  password:
  socket: /tmp/mysql.sock
  <<: *base

test:
  database: fricodb_testing
  username: root
  password:
  socket: /tmp/mysql.sock
  <<: *base

production:
  adapter: mysql2
  database: frog110_live
  username: #{Capistrano::CLI.ui.ask("Enter MySQL username: ")}
  password: #{Capistrano::CLI.ui.ask("Enter MySQL database password: ")}
  <<: *base

